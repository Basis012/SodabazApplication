<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UserFragments.CategoryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Category"
    android:textColor="@color/black"
    android:fontFamily="sans-serif"
    android:textStyle="bold"
    android:layout_margin="20dp"
    android:textSize="20sp"
    android:gravity="start"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/appbgcolor"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:text="Add Category"
          android:background="#2196F3"
          android:id="@+id/topitem"
          android:textColor="@color/white"
          android:gravity="center_vertical"
          android:fontFamily="sans-serif"
          android:paddingLeft="20sp"
          android:textStyle="bold"
          android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Category"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:id="@+id/text1"
            android:paddingLeft="20sp"
            android:textSize="16sp"
            android:layout_below="@id/topitem"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/field1"
                android:layout_below="@id/text1"
                android:layout_marginLeft="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Category">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="File Input"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:paddingLeft="20sp"
                android:id="@+id/text2"
                android:textSize="16sp"
                android:layout_below="@id/field1"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/layout2"
                android:layout_below="@id/text2"
                android:layout_marginLeft="20dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Choose File">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/password"
                    android:inputType="text"
                    />
            </com.google.android.material.textfield.TextInputLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:id="@+id/lastlayout"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_below="@id/layout2"
             android:layout_height="wrap_content">
             <Button
                 android:layout_width="wrap_content"
                 android:layout_below="@id/layout2"
                 android:id="@+id/button1"
                 android:textSize="12sp"
                 android:text="Browse"
                 android:textStyle="bold"
                 android:fontFamily="sans-serif"
                 android:layout_height="wrap_content"/>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_marginLeft="20dp"
                 android:text="upload"
                 android:textSize="12sp"
                 android:fontFamily="sans-serif"
                 android:textStyle="bold"
                 android:id="@+id/nbtn"
                 android:layout_toRightOf="@id/button1"
                 android:layout_height="wrap_content"/>
             <Button
                 android:layout_width="wrap_content"
                 android:text="Create"
                 android:fontFamily="sans-serif"
                 android:textStyle="bold"
                 android:textSize="12sp"
                 android:id="@+id/nbtn1"
                 android:layout_marginLeft="20dp"
                 android:layout_height="wrap_content"/>
         </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
  <RelativeLayout
      android:layout_width="match_parent"
      android:background="#2196F3"
    android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="20dp"
      android:layout_height="50dp">
      <TextView
          android:layout_width="40dp"
          android:textColor="@color/white"
          android:text="No"
          android:gravity="center"
          android:textStyle="bold"
          android:layout_marginLeft="10dp"
          android:layout_centerVertical="true"
          android:fontFamily="sans-serif"
          android:textSize="12sp"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="120dp"
          android:textColor="@color/white"
          android:text="Category"
          android:gravity="center"
          android:textStyle="bold"
          android:fontFamily="sans-serif"
         android:layout_centerInParent="true"
          android:textSize="12sp"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="70dp"
          android:textColor="@color/white"
          android:text="Image"
          android:gravity="center"
          android:layout_centerVertical="true"
          android:textStyle="bold"
          android:layout_marginRight="10dp"
          android:layout_alignParentRight="true"
          android:fontFamily="sans-serif"
          android:textSize="12sp"
          android:layout_height="wrap_content"/>
  </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/recycler" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>