<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SliderFragments.FirstFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="130dp"
                    android:layout_alignParentRight="true"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="#E0E5E6"
                    android:id="@+id/skipbtn"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SKIP"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/left"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"/>
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="50dp"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            app:lottie_rawRes="@raw/rightarrow"
                            android:layout_height="50sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                android:layout_height="300dp">
<!--                <ImageView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:scaleType="fitXY"-->
<!--                    android:src="@drawable/slider1"/>-->
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="30dp"
                android:textColor="@color/childcolor"
                android:textSize="12sp"
                android:lineSpacingExtra="3dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/cardbgcolor"
                    android:text="NEXT"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    app:cornerRadius="25dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:id="@+id/gotonext"
                    android:layout_height="60dp"/>
                <!--            <TextView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginTop="40dp"-->
                <!--                android:layout_below="@+id/skipbtn"/>-->
            </RelativeLayout>
        </LinearLayout>
</ScrollView>